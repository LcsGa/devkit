      "@lcsga/ng-extensions/forms": ["packages/ng-extensions/forms/src/index.ts"],
      "@lcsga/ng-extensions/rxjs": ["packages/ng-extensions/rxjs/src/index.ts"],
      "@lcsga/operators": ["packages/operators/src/index.ts"],
      "@lcsga/zod-operators": ["packages/zod-operators/src/index.ts"]
